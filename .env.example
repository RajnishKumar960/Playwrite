### Copy this file to .env and fill in your LinkedIn and Google credentials
LINKEDIN_EMAIL="you@example.com"
LINKEDIN_PASSWORD="your_password_here"

# Path to the downloaded Google service account JSON key file (absolute or relative)
GOOGLE_SERVICE_ACCOUNT_FILE="C:/path/to/service-account.json"

# Optional default Google sheet to write scraped rows (sheet id only)
GOOGLE_SHEET_ID="<YOUR_GOOGLE_SHEET_ID>"

# Recommended: set a strong API key for the Play API. Keep this secret and don't commit.
PLAY_API_KEY="replace-with-a-strong-secret"

# Optional override for the sqlite DB used to mark processed profiles (local default: play_state.db)
# PLAY_DB_PATH="/path/to/play_state.db"
